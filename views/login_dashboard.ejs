<style>
  body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f0f0f0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
  }

  .btn {
      display: inline-block;
      padding: 10px 20px;
      font-size: 14px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin: 10px;
      background-color: #007bff;
      color: white;
  }

  .btn:hover {
      background-color: #0056b3;
  }
</style>
</head>
<body>
<button class="btn" type="button" onclick="navigateToSignup()">Sign Up</button>
<button class="btn" type="button" onclick="navigateToSignIn()">Sign In</button>

<script>
 function navigateToSignup() {
  window.location.href = "/users/signup"; 
}

function navigateToSignIn() {
  window.location.href = "/users/signin"; 
}
</script>
